<div class="main_chat1">
  <div class="left-header">
    <div class="main_chat1_name">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="chat_end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main_chat2">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main_chat3', local: true do |f| %>
  <div class="main_chat3left">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>